<tr>
  <td class="file-actions">
    <a href="/show?id={{_id}}" class="no-deco" title="show" target="_blank">
      <svg height="20" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" fill="#000000">
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g id="SVGRepo_iconCarrier">
          <path d="M0 0h48v48H0z" fill="none"></path>
          <g id="Shopicon">
            <path
              d="M24,38c12,0,20-14,20-14s-8-14-20-14S4,24,4,24S12,38,24,38z M24,14c7.072,0,12.741,6.584,15.201,9.992 C36.728,27.396,31.024,34,24,34c-7.072,0-12.741-6.584-15.201-9.992C11.272,20.604,16.976,14,24,14z">
            </path>
            <path
              d="M24,32c4.418,0,8-3.582,8-8s-3.582-8-8-8s-8,3.582-8,8S19.582,32,24,32z M24,20c2.206,0,4,1.794,4,4c0,2.206-1.794,4-4,4 s-4-1.794-4-4C20,21.794,21.794,20,24,20z">
            </path>
          </g>
        </g>
      </svg>
    </a>
    <a href="/delete?id={{_id}}" class="no-deco" title="delete">
      <svg height="20" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" fill="#000000">
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g id="SVGRepo_iconCarrier">
          <path d="M0 0h48v48H0z" fill="none"></path>
          <g id="Shopicon">
            <rect x="18" y="20" width="4" height="16"></rect>
            <rect x="26" y="20" width="4" height="16"></rect>
            <path
              d="M42,12h-8V8c0-2.2-1.8-4-4-4H18c-2.2,0-4,1.8-4,4v4H6v4h4v24c0,2.2,1.8,4,4,4h20c2.2,0,4-1.8,4-4V16h4V12z M18,8h12v4H18V8 z M34,40H14V16h4h12h4V40z">
            </path>
          </g>
        </g>
      </svg>
    </a>
    <a href="/info?id={{_id}}" class="no-deco" title="info">
      <svg height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g id="SVGRepo_iconCarrier">
          <circle cx="12" cy="12" r="10" transform="rotate(-180 12 12)" stroke="#333333" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round"></circle>
          <line x1="12" y1="17" x2="12" y2="11" stroke="#333333" stroke-width="2" stroke-linecap="round"
            stroke-linejoin="round"></line>
          <path d="M12 7L12 7.01" stroke="#333333" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          </path>
        </g>
      </svg>
    </a>
    <a href="/download?id={{_id}}" class="no-deco" title="download">
      <svg height="20" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" fill="#000000">
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g id="SVGRepo_iconCarrier">
          <path d="M0 0h48v48H0z" fill="none"></path>
          <g id="Shopicon">
            <polygon points="22,4 22,20 14,20 24,30 34,20 26,20 26,4 "></polygon>
            <path d="M8,44h32c2.206,0,4-1.794,4-4V30h-4v10H8V30H4v10C4,42.206,5.794,44,8,44z"></path>
          </g>
        </g>
      </svg>
    </a>
  </td>
  <td class="file-id">{{_id}}</td>
  <td class="file-name flex-row">
    {{#if icon}}
    <img src="{{icon}}">
    {{/if}}
  
    &nbsp;{{name}}
  </td>
  <td class="file-size">{{size}}</td>
  <td class="file-type">{{type}}</td>
</tr>